{
  "name": "react-mock-component",
  "version": "4.0.0",
  "description": "Create type safe mock React components to use in tests",
  "keywords": [
    "tdd",
    "react",
    "spy",
    "stub",
    "mock",
    "test",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/NiGhTTraX/react-mock-component.git"
  },
  "author": "Andrei Picus",
  "license": "MIT",
  "homepage": "https://github.com/NiGhTTraX/react-mock-component",
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run clean && pnpm run compile",
    "clean": "rm -rf ./dist",
    "compile": "tsc -p tsconfig.build.json",
    "prepublishOnly": "pnpm run build",
    "release": "standard-version",
    "lint": "eslint --quiet .",
    "test": "vitest --coverage"
  },
  "dependencies": {
    "sinon": "~15.1.0"
  },
  "peerDependencies": {
    "@types/react": "^18.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "~9.16.0",
    "@tdd-buffet/tsconfig": "~1.0.5",
    "@testing-library/dom": "~10.4.0",
    "@testing-library/react": "~16.1.0",
    "@types/node": "~22.10.0",
    "@types/react": "~19.0.2",
    "@types/react-dom": "~19.0.2",
    "@types/sinon": "~17.0.0",
    "@vitejs/plugin-react": "~4.3.4",
    "@vitest/coverage-v8": "~2.1.8",
    "eslint": "~9.17.0",
    "eslint-config-prettier": "~9.1.0",
    "eslint-plugin-prettier": "~5.2.1",
    "jsdom": "~25.0.1",
    "prettier": "~3.4.2",
    "react": "~19.0.0",
    "react-dom": "~19.0.0",
    "standard-version": "~9.5.0",
    "typescript": "~5.7.0",
    "typescript-eslint": "~8.17.0",
    "vitest": "~2.1.8"
  },
  "packageManager": "pnpm@9.14.4"
}
